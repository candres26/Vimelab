{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Editar Log{% endblock %}

{% block area %}

<h2 align="left">Editar Log</h2>

<form id="vime-form" action="{{ path('gblogr_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<input type="submit" style="display: none" id="sender" value="send">
	<table align="center">
		<tr><td colspan='2'>{{ form_errors(edit_form.gbusua) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.gbusua) }}</td><td align="left">{{ form_widget(edit_form.gbusua) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.fecha) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.fecha) }}</td><td align="left">{{ form_widget(edit_form.fecha) }}</td></tr>
		<tr><td></td><td style="font-size: 10px; color: silver; font-style: italic;" align="left">Fecha: Año-Mes-Día (Ej: 1984-10-15)</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.modulo) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.modulo) }}</td><td align="left">{{ form_widget(edit_form.modulo) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.accion) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.accion) }}</td><td align="left">{{ form_widget(edit_form.accion) }}</td></tr>
    </table>
    {{ form_rest(edit_form) }}
</form>

<form id="vime-form-del" action="{{ path('gblogr_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
</form>		

{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('gblogr') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form-del').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="SimularClick('sender')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/guardar.png') }}" title="Guardar"></td>
		</tr>
	</table>
</div>
{% endblock %}


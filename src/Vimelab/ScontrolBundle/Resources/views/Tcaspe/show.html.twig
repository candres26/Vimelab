{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Descripción Aspecto{% endblock %}

{% block area %}

<h2 align="left">Descripción de Aspecto</h2>

<table class="vime-table-des" align="center">
    <tbody>
        <tr>
            <th align="left">Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th align="left">Código</th>
            <td>{{ entity.codigo }}</td>
        </tr>
        <tr>
            <th align="left">Nombre</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th align="left">Criterio</th>
            <td>{{ entity.criterio }}</td>
        </tr>
        <tr>
            <th align="left">Medida</th>
            <td>{{ entity.medida }}</td>
        </tr>
    </tbody>
</table>

	<form id="vime-form" action="{{ path('tcaspe_delete', { 'id': entity.id }) }}" method="post">
		{{ form_widget(delete_form) }}
	</form>
    
{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('tcaspe') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="go('{{ path('tcaspe_edit', { 'id': entity.id }) }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/editar.png') }}" title="Editar"></td>
		</tr>
	</table>
</div>
{% endblock %}

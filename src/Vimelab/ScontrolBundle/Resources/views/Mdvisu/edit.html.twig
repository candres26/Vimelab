{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Editar Ag. Visual{% endblock %}

{% block area %}

<h2 align="left">Editar Ag. Visual</h2>

<form id="vime-form" action="{{ path('mdvisu_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<input type="submit" style="display: none" id="sender" value="send">
	
	<table style="margin-left: 1%; margin-top: 1%;">
		<tr style="display: none;"><td colspan='2'>{{ form_errors(edit_form.mdhist) }}</td></tr>
		<tr style="display: none;"><td align="left">{{ form_label(edit_form.mdhist) }}</td><td align="left">{{ form_widget(edit_form.mdhist) }}</td></tr>
		
		<tr><td>Historia #{{ entity.mdhist.id }}</td><td>{{ entity.mdhist.fecha.format('Y-m-d') }}</td></tr>
		<tr><td>{{ entity.mdhist.mdpaci.identificacion }}</td><td>{{ entity.mdhist.mdpaci.getFullName() }}</td></tr>
	</table>
	
	<table style="position: absolute; margin-left: 10%; margin-top: 3.7%;">
		<tr><td align="left">{{ form_label(edit_form.lentes) }}</td><td align="left"> {{ form_errors(edit_form.lentes) }} {{ form_widget(edit_form.lentes) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.lentesprueba) }}</td><td align="left"> {{ form_errors(edit_form.lentesprueba) }} {{ form_widget(edit_form.lentesprueba) }}</td></tr>
	</table>
	&nbsp;
	<table style="position: absolute; margin-left: 33%; margin-top: 1%;">
		<tr>
			<td>
				<table>
					<tr>
						<td align="left"> {{ form_label(edit_form.miopia) }} </td><td> {{ form_errors(edit_form.miopia) }} {{ form_widget(edit_form.miopia) }}</td>
					</tr>
					<tr>
						<td align="left"> {{ form_label(edit_form.hipermetropia) }} </td><td> {{ form_errors(edit_form.hipermetropia) }} {{ form_widget(edit_form.hipermetropia) }} </td>
					</tr>
					<tr>
						<td align="left"> {{ form_label(edit_form.astigmatismo) }} </td><td> {{ form_errors(edit_form.astigmatismo) }} {{ form_widget(edit_form.astigmatismo) }} </td>
					</tr>
					<tr>
						<td align="left"> {{ form_label(edit_form.bif) }} </td><td> {{ form_errors(edit_form.bif) }} {{ form_widget(edit_form.bif) }} </td>
					</tr>
				</table>
			</td>
			<td>
				<table>
					<tr>
						<td align="left"> {{ form_label(edit_form.lent) }} </td><td> {{ form_errors(edit_form.lent) }} {{ form_widget(edit_form.lent) }} </td>
					</tr>
					<tr>
						<td align="left"> {{ form_label(edit_form.vcl) }} </td><td> {{ form_errors(edit_form.vcl) }} {{ form_widget( edit_form.vcl) }} </td>
					</tr>
					<tr>
						<td align="left"> {{ form_label(edit_form.vl) }} </td><td> {{ form_errors(edit_form.vl) }} {{ form_widget(edit_form.vl) }} </td>
					</tr>
					<tr>
						<td align="left"> {{ form_label(edit_form.vc) }} </td><td> {{ form_errors(edit_form.vc) }} {{ form_widget(edit_form.vc) }} </td>
					</tr>
				</table>
			</td>
		</tr>
	
	</table>
	&nbsp;
	<table style="position: absolute; margin-left: 60%; margin-top: 1%;">
		<tr>
			<th></th><th>OD</th><th>OI</th><th>AO</th>
		</tr>
		<tr>
			<td>VL</td><td> {{ form_errors(edit_form.vlod) }}  {{ form_widget(edit_form.vlod, { 'attr': { 'size': '1' }}) }} </td><td> {{ form_errors(edit_form.vloi) }} {{ form_widget(edit_form.vloi, { 'attr': { 'size': '1' }}) }} </td><td> {{ form_errors(edit_form.vlao) }} {{ form_widget(edit_form.vlao, { 'attr': { 'size': '1' }}) }} </td>
		</tr>
		<tr>
			<td>VC</td><td> {{ form_errors(edit_form.vcod) }} {{ form_widget(edit_form.vcod, { 'attr': { 'size': '1' }}) }} </td><td> {{ form_errors(edit_form.vcoi) }} {{ form_widget(edit_form.vcoi, { 'attr': { 'size': '1' }}) }} </td><td> {{ form_errors(edit_form.vcao) }} {{ form_widget(edit_form.vcao, { 'attr': { 'size': '1' }}) }} </td>
		</tr>	
	</table>
	
   <table align="center" style="display: none;">
		<tr><td align="left">{{ form_label(edit_form.vlod) }}</td><td align="left"></td></tr>
		<tr><td align="left">{{ form_label(edit_form.vloi) }}</td><td align="left"></td></tr>
		<tr><td align="left">{{ form_label(edit_form.vlao) }}</td><td align="left"></td></tr>
		<tr><td align="left">{{ form_label(edit_form.vcod) }}</td><td align="left"></td></tr>
		<tr><td align="left">{{ form_label(edit_form.vcoi) }}</td><td align="left"></td></tr>
		<tr><td align="left">{{ form_label(edit_form.vcao) }}</td><td align="left"></td></tr>
    </table>
    {{ form_rest(edit_form) }}
</form>

<form id="vime-form-del" action="{{ path('mdvisu_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
</form>			

{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('mdvisu') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form-del').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="SimularClick('sender')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/guardar.png') }}" title="Guardar"></td>
		</tr>
	</table>
</div>
{% endblock %}

{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Descripción Ant. Personal{% endblock %}

{% block area %}

<h2 align="left">Descripción Antecedente Personal</h2>

<table class="vime-table-des" align="center">
    <tbody>
        <tr>
            <th align="left">Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th align="left">Fecha</th>
            <td>{{ entity.fecha|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th align="left">Identificación</th>
            <td>{{ entity.mdpaci.identificacion }}</td>
        </tr>
        <tr>
            <th align="left">Nombre paciente</th>
            <td>{{ entity.mdpaci.prinom }} {{ entity.mdpaci.segnom }} {{ entity.mdpaci.priape }} {{ entity.mdpaci.segape }}</td>
        </tr>
        <tr>
            <th align="left">Accidentes en el último año</th>
            <td>{% if entity.evento == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Operaciones habituales</th>
            <td>{{ entity.operaciones }}</td>
        </tr>
        <tr>
            <th align="left">Productos que manipula</th>
            <td>{{ entity.productos }}</td>
        </tr>
        <tr>
            <th align="left">Riesgos a los que se expone</th>
            <td>{{ entity.riesgos }}</td>
        </tr>
        <tr>
            <th align="left">Tiempo de exposición</th>
            <td>{{ entity.texposicion }}</td>
        </tr>
        <tr>
            <th align="left">Protección adoptada</th>
            <td>{{ entity.proteccion }}</td>
        </tr>
        <tr>
            <th align="left">Ventilación ambiental</th>
            <td>{{ entity.ventilacion }}</td>
        </tr>
        <tr>
            <th align="left">Temperatura ambiental</th>
            <td>{{ entity.temperatura }}</td>
        </tr>
        <tr>
            <th align="left">Horario</th>
            <td>{{ entity.horario }}</td>
        </tr>
        <tr>
            <th align="left">Turno</th>
            <td>{{ entity.turno }}</td>
        </tr>
        <tr>
            <th align="left">Rotación</th>
            <td>{{ entity.rotacion }}</td>
        </tr>
        <tr>

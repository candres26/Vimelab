{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Editar Historia{% endblock %}

{% block area %}
<h2 align="left">Editar Historia</h2>

<form id="vime-form" action="{{ path('mdhist_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<input type="submit" style="display: none" id="sender" value="send">
   <table align="center">
		<tr><td colspan='2'>{{ form_errors(edit_form.fecha) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.fecha) }}</td><td align="left">{{ form_widget(edit_form.fecha) }}<img id="hlpFecha" class='exitBtn' src="{{ asset('bundles/scontrol/imagenes/date.gif') }}"></td><td align="left"></td></tr>
		<tr><td>&nbsp;</td><td style="font-size: 10px; color: silver; font-style: italic;" align="left">Fecha: Año-Mes-Día (Ej: 1984-10-15)</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.menstru) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.menstru) }}</td><td align="left">{{ form_widget(edit_form.menstru) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.tipo) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.tipo) }}</td><td align="left">{{ form_widget(edit_form.tipo) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.mdpaci) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.mdpaci) }}</td><td align="left">{{ form_widget(edit_form.mdpaci) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.gbpers) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.gbpers) }}</td><td align="left">{{ form_widget(edit_form.gbpers) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.tcruta) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.tcruta) }}</td><td align="left">{{ form_widget(edit_form.tcruta) }}</td></tr>
    </table>
    {{ form_rest(edit_form) }}
</form>

<form id="vime-form-del" action="{{ path('mdhist_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
</form>			

{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('mdhist') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form-del').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="SimularClick('sender')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/guardar.png') }}" title="Guardar"></td>
		</tr>
	</table>
</div>
{% endblock %}

{% block uscript %}
	
	<script type="text/javascript">
		
		function $init(event)
		{
			gId('hlpFecha').onclick = $helpCalendar;						
		}
		
	</script>
	
{% endblock %}

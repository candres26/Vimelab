{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Descripción Historia{% endblock %}

{% block area %}
<h2 align="left">Descripción de Historia</h2>

<table class="vime-table-des" align="center">
    <tbody>
        <tr>
            <th align="left">Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th align="left">Fecha</th>
            <td>{{ entity.fecha.format('Y-m-d')}}</td>
        </tr>        
        <tr>
            <th align="left">Identificación paciente</th>
            <td>{{ entity.mdpaci }}</td>
        </tr>
        <tr>
			<th align="left">Paciente</th>
			<td>{{ entity.MdPaci.prinom }} {{ entity.MdPaci.segnom }} {{ entity.MdPaci.priape }} {{ entity.MdPaci.segape }}</td>
        </tr>
        <tr>
			<th align="left">Identificación personal</th>
			<td>{{ entity.gbpers }}</td>
        </tr>
        <tr>
			<th align="left">Personal</th>
			<td>{{ entity.gbpers.prinom }} {{ entity.gbpers.segnom }} {{ entity.gbpers.priape }} {{ entity.gbpers.segape }}</td>
        </tr>
        <tr>
			<th align="left">Hoja de Ruta</th>
			<td>{{ entity.TcRuta.id }}</td>
        </tr>
        <tr>
            <th align="left">Menstruación</th>
            <td>{% if entity.menstru == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Tipo</th>
            <td>{{ entity.tipo }}</td>
        </tr>
    </tbody>
</table>

	<form id="vime-form" action="{{ path('mdhist_delete', { 'id': entity.id }) }}" method="post">
		{{ form_widget(delete_form) }}
	</form>
    
{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('mdhist') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="go('{{ path('mdhist_edit', { 'id': entity.id }) }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/editar.png') }}" title="Editar"></td>
		</tr>
	</table>
</div>
{% endblock %}

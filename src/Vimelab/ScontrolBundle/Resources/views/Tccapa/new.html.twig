{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Capacitaciones{% endblock %}

{% block area %}

<h2 align="left">Capacitaciones</h2>

<form id="vime-form" action="{{ path('tccapa_create') }}" method="post" {{ form_enctype(form) }}>
	<input type="submit" style="display: none" id="sender" value="send">
   <table align="center">
		<tr><td colspan='2'>{{ form_errors(form.codigo) }}</td></tr>
		<tr><td align="left">{{ form_label(form.codigo) }}</td><td align="left">{{ form_widget(form.codigo) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.nombre) }}</td></tr>
		<tr><td align="left">{{ form_label(form.nombre) }}</td><td align="left">{{ form_widget(form.nombre) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.descripcion) }}</td></tr>
		<tr><td align="left">{{ form_label(form.descripcion) }}</td><td align="left">{{ form_widget(form.descripcion) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.duracion) }}</td></tr>
		<tr><td align="left">{{ form_label(form.duracion) }}</td><td align="left">{{ form_widget(form.duracion) }}</td></tr>
    </table>
    {{ form_rest(form) }}
</form>

{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('tccapa') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="SimularClick('sender')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/guardar.png') }}" title="Guardar"></td>
		</tr>
	</table>
</div>
{% endblock %}

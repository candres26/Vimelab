		<tr><td colspan='2'>{{ form_errors(form.nervioso) }}</td></tr>
		<tr><td align="left">{{ form_label(form.nervioso) }}</td><td align="left">{{ form_widget(form.nervioso) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.ppl) }}</td></tr>
		<tr><td align="left">{{ form_label(form.ppl) }}</td><td align="left">{{ form_widget(form.ppl) }}</td></tr>
    </table>
    {{ form_rest(form) }}
</form>

{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('mdsist') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="SimularClick('sender')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/guardar.png') }}" title="Guardar"></td>
		</tr>
	</table>
</div>
{% endblock %}

{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}R. Sistemas{% endblock %}

{% block area %}

<h2 align="left">R. Sistemas</h2>

<form id="vime-form" action="{{ path('mdsist_create') }}" method="post" {{ form_enctype(form) }}>

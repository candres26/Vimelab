   <table align="center">
		<tr><td colspan='2'>{{ form_errors(form.mdhist) }}</td></tr>
		<tr><td align="left">{{ form_label(form.mdhist) }}</td><td align="left">{{ form_widget(form.mdhist) }}</td></tr>		
		<tr><td colspan='2'>{{ form_errors(form.otoscder) }}</td></tr>
		<tr><td align="left">{{ form_label(form.otoscder) }}</td><td align="left">{{ form_widget(form.otoscder) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.otosciz) }}</td></tr>
		<tr><td align="left">{{ form_label(form.otosciz) }}</td><td align="left">{{ form_widget(form.otosciz) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.boca) }}</td></tr>
		<tr><td align="left">{{ form_label(form.boca) }}</td><td align="left">{{ form_widget(form.boca) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.garganta) }}</td></tr>
		<tr><td align="left">{{ form_label(form.garganta) }}</td><td align="left">{{ form_widget(form.garganta) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.pupilas) }}</td></tr>
		<tr><td align="left">{{ form_label(form.pupilas) }}</td><td align="left">{{ form_widget(form.pupilas) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.columna) }}</td></tr>
		<tr><td align="left">{{ form_label(form.columna) }}</td><td align="left">{{ form_widget(form.columna) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.mucosas) }}</td></tr>
		<tr><td align="left">{{ form_label(form.mucosas) }}</td><td align="left">{{ form_widget(form.mucosas) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.cardiaca) }}</td></tr>

{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Descripción Sistema{% endblock %}

{% block area %}

<h2 align="left">Descripción de Sistema</h2>

<table class="vime-table-des" align="center">
    <tbody>
        <tr>
            <th align="left">Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th align="left">Otosc. Dcha.</th>
            <td>{% if entity.otoscder == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Otosc. Izqda.</th>
            <td>{% if entity.otosciz == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Boca</th>
            <td>{% if entity.boca == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Garganta</th>
            <td>{% if entity.garganta == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Pupílas</th>
            <td>{% if entity.pupilas == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Expl. Columna.</th>
            <td>{% if entity.columna == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Piel y Mucosas</th>
            <td>{% if entity.mucosas == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Ausc. Cardíaca</th>
            <td>{% if entity.cardiaca == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Ausc. Respiratoria</th>
            <td>{% if entity.respiratoria == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Palpación Abdominal</th>
            <td>{% if entity.abdominal == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">Sist. Nervioso</th>
            <td>{% if entity.nervioso == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
        <tr>
            <th align="left">PPL</th>
            <td>{% if entity.ppl == 'S' %} SI {% else %} NO {% endif %}</td>
        </tr>
    </tbody>
</table>

	<form  id="vime-form" action="{{ path('mdsist_delete', { 'id': entity.id }) }}" method="post">
		{{ form_widget(delete_form) }}
	</form>
    
{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('mdsist') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="go('{{ path('mdsist_edit', { 'id': entity.id }) }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/editar.png') }}" title="Editar"></td>
		</tr>
	</table>
</div>
{% endblock %}

{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Editar R. Sistema{% endblock %}

{% block area %}

<h2 align="left">Editar R. Sistemas</h2>

<form id="vime-form" action="{{ path('mdsist_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<input type="submit" style="display: none" id="sender" value="send">
   <table align="center">
   		<tr><td colspan='2'>{{ form_errors(edit_form.mdhist) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.mdhist) }}</td><td align="left">{{ form_widget(edit_form.mdhist) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.otoscder) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.otoscder) }}</td><td align="left">{{ form_widget(edit_form.otoscder) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.otosciz) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.otosciz) }}</td><td align="left">{{ form_widget(edit_form.otosciz) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.boca) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.boca) }}</td><td align="left">{{ form_widget(edit_form.boca) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.garganta) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.garganta) }}</td><td align="left">{{ form_widget(edit_form.garganta) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.pupilas) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.pupilas) }}</td><td align="left">{{ form_widget(edit_form.pupilas) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.columna) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.columna) }}</td><td align="left">{{ form_widget(edit_form.columna) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.mucosas) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.mucosas) }}</td><td align="left">{{ form_widget(edit_form.mucosas) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.cardiaca) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.cardiaca) }}</td><td align="left">{{ form_widget(edit_form.cardiaca) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.respiratoria) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.respiratoria) }}</td><td align="left">{{ form_widget(edit_form.respiratoria) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.abdominal) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.abdominal) }}</td><td align="left">{{ form_widget(edit_form.abdominal) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.nervioso) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.nervioso) }}</td><td align="left">{{ form_widget(edit_form.nervioso) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.ppl) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.ppl) }}</td><td align="left">{{ form_widget(edit_form.ppl) }}</td></tr>
    </table>
    {{ form_rest(edit_form) }}
</form>

<form id="vime-form-del" action="{{ path('mdsist_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
</form>			

{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('mdsist') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form-del').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="SimularClick('sender')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/guardar.png') }}" title="Guardar"></td>
		</tr>
	</table>
</div>
{% endblock %}


{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Descripción Sucursal{% endblock %}

{% block area %}
<h2 align="left">Descripción de Sucursal</h2>

<table class="vime-table-des" align="center">
    <tbody>
        <tr>
            <th align="left">Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th align="left">Identificación</th>
            <td>{{ entity.gbempr.identificacion }}</td>
        </tr>
        <tr>
            <th align="left">Nombre Empresa</th>
            <td>{{ entity.gbempr.nombre }}</td>
        </tr>
        <tr>
            <th align="left">Nombre Sucursal</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th align="left">Teléfono</th>
            <td>{{ entity.telefono }}</td>
        </tr>
        <tr>
            <th align="left">Teléfono 2</th>
            <td>{{ entity.tele2 }}</td>
        </tr>
        <tr>
            <th align="left">Fax</th>
            <td>{{ entity.fax }}</td>
        </tr>
        <tr>
            <th align="left">Contacto</th>
            <td>{{ entity.contacto }}</td>
        </tr>
        <tr>
            <th align="left">Dirección</th>
            <td>{{ entity.direccion }}</td>
        </tr>
        <tr>
            <th align="left">Ciudad</th>
            <td>{{ entity.gbciud.nombre }}</td>
        </tr>
        <tr>
            <th align="left">Correo</th>
            <td>{{ entity.correo }}</td>
        </tr>
    </tbody>
</table>

	<form id="vime-form" action="{{ path('gbsucu_delete', { 'id': entity.id }) }}" method="post">
		{{ form_widget(delete_form) }}
	</form>
    
{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('gbsucu') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="go('{{ path('gbsucu_edit', { 'id': entity.id }) }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/editar.png') }}" title="Editar"></td>
		</tr>
	</table>
</div>
{% endblock %}

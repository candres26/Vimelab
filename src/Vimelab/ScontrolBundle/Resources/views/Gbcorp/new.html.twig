{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Corporación{% endblock %}

{% block area %}
<h2 align="left">Corporación</h2>

<form id="vime-form" action="{{ path('gbcorp_create') }}" method="post" {{ form_enctype(form) }}>
	<input type="submit" style="display: none" id="sender" value="send">
	<table align="center">
		<tr><td colspan='2'>{{ form_errors(form.empresagbiden) }}</td></tr>
		<tr><td align="left">{{ form_label(form.empresagbiden) }}</td><td align="left">{{ form_widget(form.empresagbiden) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.identificacion) }}</td></tr>
		<tr><td align="left">{{ form_label(form.identificacion) }}</td><td align="left">{{ form_widget(form.identificacion) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.nombre) }}</td></tr>
		<tr><td align="left">{{ form_label(form.nombre) }}</td><td align="left">{{ form_widget(form.nombre) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.rplegal) }}</td></tr>
		<tr><td align="left">{{ form_label(form.rplegal) }}</td><td align="left">{{ form_widget(form.rplegal) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.representantegbiden) }}</td></tr>
		<tr><td align="left">{{ form_label(form.representantegbiden) }}</td><td align="left">{{ form_widget(form.representantegbiden) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.identrplegal) }}</td></tr>
		<tr><td align="left">{{ form_label(form.identrplegal) }}</td><td align="left">{{ form_widget(form.identrplegal) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.gbciud) }}</td></tr>
		<tr><td align="left">{{ form_label(form.gbciud) }}</td><td align="left">{{ form_widget(form.gbciud) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.direccion) }}</td></tr>
		<tr><td align="left">{{ form_label(form.direccion) }}</td><td align="left">{{ form_widget(form.direccion) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.telefono) }}</td></tr>
		<tr><td align="left">{{ form_label(form.telefono) }}</td><td align="left">{{ form_widget(form.telefono) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.fax) }}</td></tr>
		<tr><td align="left">{{ form_label(form.fax) }}</td><td align="left">{{ form_widget(form.fax) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.correo) }}</td></tr>
		<tr><td align="left">{{ form_label(form.correo) }}</td><td align="left">{{ form_widget(form.correo) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.web) }}</td></tr>
		<tr><td align="left">{{ form_label(form.web) }}</td><td align="left">{{ form_widget(form.web) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(form.logo) }}</td></tr>
		<tr><td align="left">{{ form_label(form.logo) }}</td><td align="left">{{ form_widget(form.logo) }}</td></tr>
    </table>
    {{ form_rest(form) }}
</form>

{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('gbcorp') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="SimularClick('sender')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/guardar.png') }}" title="Guardar"></td>
		</tr>
	</table>
</div>
{% endblock %}


{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Descripción Factura{% endblock %}

{% block area %}

<h2 align="left">Descripción de Factura</h2>

<table class="vime-table-des" align="center">
    <tbody>
        <tr>
            <th align="left">No. Factura</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th align="left">Personal</th>
            <td>{{ entity.gbpers.prinom }} {{ entity.gbpers.segnom }} {{ entity.gbpers.priape }} {{ entity.gbpers.segape }}</td>
        </tr>
        <tr>
            <th align="left">Empresa</th>
            <td>{{ entity.gbempr }}</td>
        </tr>
        <tr>
            <th align="left">No. Contrato</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th align="left">Fecha</th>
            <td>{{ entity.fecha|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th align="left">Vencimiento</th>
            <td>{{ entity.vencimiento|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th align="left">Subtotal</th>
            <td>{{ entity.subtotal }}</td>
        </tr>
        <tr>
            <th align="left">Iva</th>
            <td>{{ entity.iva }}</td>
        </tr>
        <tr>
            <th align="left">Descuento</th>
            <td>{{ entity.descuento }}</td>
        </tr>
        <tr>
            <th align="left">Total</th>
            <td>{{ entity.total }}</td>
        </tr>
        <tr>
            <th align="left">Estado</th>
            <td>{{ entity.estado }}</td>
        </tr>
        <tr>
            <th align="left">Detalle</th>
            <td>{{ entity.detalle }}</td>
        </tr>
        <tr>
            <th align="left">Observaciones</th>
            <td>{{ entity.observaciones }}</td>
        </tr>
    </tbody>
</table>

	<form id="vime-form" action="{{ path('ctfact_delete', { 'id': entity.id }) }}" method="post">
		{{ form_widget(delete_form) }}
	</form>

{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('ctfact') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="go('{{ path('ctfact_edit', { 'id': entity.id }) }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/editar.png') }}" title="Editar"></td>
		</tr>
	</table>
</div>
{% endblock %}

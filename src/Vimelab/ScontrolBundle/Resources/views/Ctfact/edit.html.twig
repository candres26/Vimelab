{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Editar Factura{% endblock %}

{% block area %}
<h2 align="left">Editar Factura</h2>

<form id="vime-form" action="{{ path('ctfact_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<input type="submit" style="display: none" id="sender" value="send">
    <table style="position: absolute; margin-left: 18%;">
		<tr><td colspan='2'>{{ form_errors(edit_form.ctcont) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.ctcont) }}</td><td align="left">{{ form_widget(edit_form.ctcont) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.gbpers) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.gbpers) }}</td><td align="left">{{ form_widget(edit_form.gbpers) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.gbempr) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.gbempr) }}</td><td align="left">{{ form_widget(edit_form.gbempr) }}</td></tr>		
		<tr><td colspan='2'>{{ form_errors(edit_form.fecha) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.fecha) }}</td><td align="left">{{ form_widget(edit_form.fecha) }} <img id="hlpFecha" class='exitBtn' src="{{ asset('bundles/scontrol/imagenes/date.gif') }}"></td></tr>
		<tr><td></td><td style="font-size: 10px; color: silver; font-style: italic;" align="left">Fecha: Año-Mes-Día (Ej: 1984-10-15)</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.vencimiento) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.vencimiento) }}</td><td align="left">{{ form_widget(edit_form.vencimiento) }} <img id="hlpVencimiento" class='exitBtn' src="{{ asset('bundles/scontrol/imagenes/date.gif') }}"></td></tr>
		<tr><td></td><td style="font-size: 10px; color: silver; font-style: italic;" align="left">Fecha: Año-Mes-Día (Ej: 1984-10-15)</td></tr>		
		<tr><td colspan='2'>{{ form_errors(edit_form.subtotal) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.subtotal) }}</td><td align="left">{{ form_widget(edit_form.subtotal) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.iva) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.iva) }}</td><td align="left">{{ form_widget(edit_form.iva) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.descuento) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.descuento) }}</td><td align="left">{{ form_widget(edit_form.descuento) }}</td></tr>
	</table>
	<table style="position: absolute; margin-left: 50%;">
		<tr><td colspan='2'>{{ form_errors(edit_form.total) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.total) }}</td><td align="left">{{ form_widget(edit_form.total) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.estado) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.estado) }}</td><td align="left">{{ form_widget(edit_form.estado) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.detalle) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.detalle) }}</td><td align="left">{{ form_widget(edit_form.detalle) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.observaciones) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.observaciones) }}</td><td align="left">{{ form_widget(edit_form.observaciones) }}</td></tr>	
	</table>    
    {{ form_rest(edit_form) }}
</form>

<form id="vime-form-del" action="{{ path('ctfact_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
</form>

{% endblock %}

{% block action %}

<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('ctfact') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form-del').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="SimularClick('sender')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/guardar.png') }}" title="Guardar"></td>
		</tr>
	</table>
</div>
{% endblock %}

{% block uscript %}
	
	<script type="text/javascript">
		
		function $init(event)
		{
			gId('hlpFecha').onclick = $helpCalendar;
			gId('hlpVencimiento').onclick = $helpCalendar;
		}
		
	</script>
	
{% endblock %}

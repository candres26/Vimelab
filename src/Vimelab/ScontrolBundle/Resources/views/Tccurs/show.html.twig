{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Descripción Curso{% endblock %}

{% block area %}

<h2 align="left">Descripción de Curso</h2>

<table class="vime-table-des" align="center">
    <tbody>
        <tr>
            <th align="left">Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th align="left">Empresa</th>
            <td>{{ entity.empresa }}</td>
        </tr>
        <tr>
            <th align="left">Capacitación</th>
            <td>{{ entity.tccapa.nombre }}</td>
        </tr>
        <tr>
            <th align="left">Paciente</th>
            <td>{{ entity.mdpaci.prinom }} {{ entity.mdpaci.segnom }} {{ entity.mdpaci.priape }} {{ entity.mdpaci.segape }}</td>
        </tr>
        <tr>
            <th align="left">Inicio</th>
            <td>{{ entity.inicio|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th align="left">Fin</th>
            <td>{{ entity.fin|date('Y-m-d') }}</td>
        </tr>
        <tr>
            <th align="left">Instructor</th>
            <td>{{ entity.instructor }}</td>
        </tr>
        <tr>
            <th align="left">Detalle</th>
            <td>{{ entity.detalle }}</td>
        </tr>
    </tbody>
</table>

	<form id="vime-form" action="{{ path('tccurs_delete', { 'id': entity.id }) }}" method="post">
		{{ form_widget(delete_form) }}
	</form>
    
{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('tccurs') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="go('{{ path('tccurs_edit', { 'id': entity.id }) }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/editar.png') }}" title="Editar"></td>
		</tr>
	</table>
</div>
{% endblock %}

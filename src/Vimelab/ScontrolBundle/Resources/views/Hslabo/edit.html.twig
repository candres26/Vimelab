{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Editar Ant. Laboral{% endblock %}

{% block area %}

<h2 align="left">Editar Antecedente Laboral</h2>

<form id="vime-form" action="{{ path('hslabo_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
	<input type="submit" style="display: none" id="sender" value="send">
	<table align="center">
		<tr><td colspan='2'>{{ form_errors(edit_form.mdpaci) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.mdpaci) }}</td><td align="left">{{ form_widget(edit_form.mdpaci) }}</td></tr>	
		<tr><td colspan='2'>{{ form_errors(edit_form.edad) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.edad) }}</td><td align="left">{{ form_widget(edit_form.edad) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.empresa) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.empresa) }}</td><td align="left">{{ form_widget(edit_form.empresa) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.fingreso) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.fingreso) }}</td><td align="left">{{ form_widget(edit_form.fingreso) }} <img id="hlpFingreso" class='exitBtn' src="{{ asset('bundles/scontrol/imagenes/date.gif') }}"></td></tr>
		<tr><td></td><td style="font-size: 10px; color: silver; font-style: italic;" align="left">Fecha: Año-Mes-Día (Ej: 1984-10-15)</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.actividad) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.actividad) }}</td><td align="left">{{ form_widget(edit_form.actividad) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.puesto) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.puesto) }}</td><td align="left">{{ form_widget(edit_form.puesto) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.riesgo) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.riesgo) }}</td><td align="left">{{ form_widget(edit_form.riesgo) }}</td></tr>
		<tr><td colspan='2'>{{ form_errors(edit_form.duracion) }}</td></tr>
		<tr><td align="left">{{ form_label(edit_form.duracion) }}</td><td align="left">{{ form_widget(edit_form.duracion) }}</td></tr>
    </table>
    {{ form_rest(edit_form) }}
</form>

<form id="vime-form-del" action="{{ path('hslabo_delete', { 'id': entity.id }) }}" method="post">
	{{ form_widget(delete_form) }}
</form>

{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('hslabo') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form-del').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="SimularClick('sender')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/guardar.png') }}" title="Guardar"></td>
		</tr>
	</table>
</div>
{% endblock %}

{% block uscript %}
	
	<script type="text/javascript">
		
		function $init(event)
		{
			gId('hlpFingreso').onclick = $helpCalendar;
		}
		
	</script>
	
{% endblock %}

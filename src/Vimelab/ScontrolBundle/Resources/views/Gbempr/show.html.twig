{% extends "ScontrolBundle::layout.html.twig" %}

{% block title %}Descripción Empresa{% endblock %}

{% block area %}

<h2 align="left">Descripción de Empresa</h2>

<table class="vime-table-des" align="center">
    <tbody>
        <tr>
            <th align="left">Id</th>
            <td>{{ entity.id }}</td>
        </tr>
		<tr>
            <th align="left">Nombre Empresa</th>
            <td>{{ entity.nombre }}</td>
        </tr>
        <tr>
            <th align="left">Identificación</th>
            <td>{{ entity.identificacion }}</td>
        </tr>
        <tr>
            <th align="left">Tipo de Identificación</th>
            <td>{{ entity.tipoide.detalle }}</td>
        </tr>
        <tr>
            <th align="left">Actividad Económica</th>
            <td>{{ entity.gbcnae.actEcon }}</td>
        </tr>
        <tr>
            <th align="left">Tipo</th>
            <td>{{ entity.tipo }}</td>
        </tr>
        <tr>
            <th align="left">Representante Legal</th>
            <td>{{ entity.rplegal }}</td>
        </tr>
        <tr>
            <th align="left">Identificación Representante</th>
            <td>{{ entity.identrplegal }}</td>
        </tr>
        <tr>
            <th align="left">Web</th>
            <td>{{ entity.web }}</td>
        </tr>
    </tbody>
</table>

	<form id="vime-form" action="{{ path('gbempr_delete', { 'id': entity.id }) }}" method="post">
		{{ form_widget(delete_form) }}
	</form>
    
{% endblock %}

{% block action %}
<div class="vime-action">
	<table>
		<tr>
			<td>&nbsp;&nbsp;&nbsp;</td>
			<td onClick="go('{{ path('gbempr') }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/listar.png') }}" title="Listar"></td>
			<td onClick="gId('vime-form').submit()"><img src="{{ asset('bundles/scontrol/imagenes/iconos/eliminar.png') }}" title="Eliminar"></td>
			<td onClick="go('{{ path('gbempr_edit', { 'id': entity.id }) }}')"><img src="{{ asset('bundles/scontrol/imagenes/iconos/editar.png') }}" title="Editar"></td>
		</tr>
	</table>
</div>
{% endblock %}
